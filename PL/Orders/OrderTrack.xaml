<Window x:Class="PL.Orders.OrderTrack"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Orders"
        mc:Ignorable="d"
        Title="OrderTrack" Height="450" Width="800">
    <Grid>
        <Image x:Name="FollowBCKGRND" Source="/Orders/2004963b6f8b662951b97bb34dff4c1d.jpg" Stretch="UniformToFill" Margin="-22,0,-9,10"/>

        <Label x:Name="orIDLBL" FontSize="20" FontStyle="Italic" Foreground="LightGreen" FontWeight="DemiBold" Content="Please enter order Id: " HorizontalAlignment="Center" Margin="0,144,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="orIDTXTBX" HorizontalAlignment="Center" Margin="0,200,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="264" Height="25"/>
        <Button x:Name="OrTrBTN" Style="{StaticResource myButtonStyle}" FontSize="22" Height="50" Width="120" Content="Done" HorizontalAlignment="Center" Margin="0,278,0,0" VerticalAlignment="Top" Click="OrTrBTN_Click"/>

    </Grid>
</Window>
